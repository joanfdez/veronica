<div class='lift-bacground'>

<% content_for :title, "Edit Profile" %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="dashboard-card">



          <h1></h1>
          <%= simple_form_for current_user, url: update_profile_path do |f| %>
            <%= f.error_notification %>

            <h2>  <%= t('views.profiles.edit.personal_info') %> </h2>
            <%= f.input :t('views.profiles.edit.first_name'), placeholder: 'Bob' %>
            <%= f.input :t('views.profiles.edit.last_name'), placeholder: 'Fernandez' %>
            <%= f.input :t('views.profiles.edit.date_of_birth'), as: :date_picker %>


            <%= f.input : t('views.profiles.edit.description'), label: I18n.t('views.profiles.edit.what_do_you_expect_from_this_platform', default: 'What do you expect from this platform'), as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }, placeholder: 'bla bla' %>


            <%= f.input : t('views.profiles.edit.gender'), as:  :radio_buttons,  collection: ['Male', 'Female'], wrapper: :vertical_radio_and_checkboxes %>

            <%= f.input : t('views.profiles.edit.address'), placeholder: '36 longmore road', label: 'Personal Address', input_html: { class: :autocomplete } %>

            <%= f.input : t('views.profiles.edit.photo'), as: :attachinary %>


            <h2>   <%= t('views.profiles.edit.contact_info') %> </h2>
            <%= f.input :email, placeholder: 'bob@bob.com' %>
            <%= f.input : <%= t('views.profiles.edit.phone_number'), placeholder: '0044 933715178'%>

            <h2>Verification details </h2>
            <%= f.input :linkedin_URL, placeholder: 'https://uk.linkedin.com/in/lorenzobernardiuk' %>
            <%= f.input :facebook_URL, placeholder: 'https://www.facebook.com/angie.allbones'  %>

            <%= f.input :<%= t('views.profiles.edit.id_document'), as: :attachinary %>


            <%= f.button :submit, class: "btn-custom btn-primary"%>
          <% end %>
          </div>

  >

      </div>
    </div>
  </div>
</div>

</div>




