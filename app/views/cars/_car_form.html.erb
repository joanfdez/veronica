<div class="dashboard-card">

 <hp class="text-center"> </hp>

<%= simple_form_for @car do |f| %>
  <%= f.error_notification %>


  <%= f.input :bio, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
  <%= f.input :travel_distance, label: I18n.t('views.cars._car_form.max_travel_distance_in_km', default: 'Max travel distance in km'), input_html: { min: '1', max: '100', step: 'any' } %>
  <%= f.input :price_hour, label: I18n.t('views.cars._car_form.price_hour', default: 'Price per hour') %>
  <%#= f.input :video_URL %>


  <%= f.button :submit, I18n.t('views.journeys.new.send', default: 'Send'), class: "btn btn-primary wide-btn" %>

<% end %>

</div>




